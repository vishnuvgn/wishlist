---
import Layout from "../layouts/Layout.astro";
import OrigamiTree from "../components/OrigamiTree.astro";
---

<Layout title="Wishlist">
  <div id="scene-container">
    <div id="envelope-wrapper">
      <OrigamiTree />
    </div>
  </div>
</Layout>

<style>
  #scene-container {
    width: 100vw;
    height: 100vh;
    height: 100dvh; /* Mobile friendly height */
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    background: #323641; /* Match envelope bg */
  }

  #envelope-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }
</style>
