<div class="letter-image">
  <div class="animated-mail">
    <div class="back-fold"></div>
    <div class="letter">
      <div class="letter-border"></div>
      <div class="letter-title"></div>
      <div class="letter-context"></div>
      <div class="letter-body">
        <div class="body-line"></div>
        <div class="body-line"></div>
        <div class="body-line"></div>
      </div>
      <div class="letter-stamp">
        <div class="letter-stamp-inner"></div>
      </div>
      <div class="letter-footer"></div>
    </div>
    <div class="top-fold"></div>
    <div class="body"></div>
    <div class="left-fold"></div>
  </div>
  <div class="shadow"></div>
</div>

<style>
  body {
    background: #323641;
  }

  .letter-image {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200px;
    height: 200px;
    transform: translate(-50%, -50%);
    cursor: pointer;
  }

  .animated-mail {
    position: absolute;
    height: 150px;
    width: 200px;
    transition: 0.4s;
  }

  .animated-mail .body {
    position: absolute;
    bottom: 0;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 0 100px 200px;
    /* border-color: transparent transparent #e95f55 transparent; */
    border-color: transparent transparent #70161e transparent;

    z-index: 2;
  }

  .animated-mail .top-fold {
    position: absolute;
    top: 50px;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 50px 100px 0 100px;
    transform-origin: 50% 0%;
    transition:
      transform 0.4s 0.4s,
      z-index 0.2s 0.4s;
    /* border-color: #cf4a43 transparent transparent transparent; */
    border-color: #4f0f15 transparent transparent transparent;

    z-index: 2;
  }

  .animated-mail .back-fold {
    position: absolute;
    bottom: 0;
    width: 200px;
    height: 100px;
    /* background: #cf4a43; */
    background: #495d63;

    z-index: 0;
  }

  .animated-mail .left-fold {
    position: absolute;
    bottom: 0;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 50px 0 50px 100px;
    /* border-color: transparent transparent transparent #e15349; */
    border-color: transparent transparent transparent #8a1e29;
    /* border-color: transparent transparent transparent #4F0F15; */
    z-index: 2;
  }

  .animated-mail .letter {
    left: 20px;
    bottom: 0;
    position: absolute;
    width: 160px;
    height: 60px;
    /* background: white; */
    background: white; /* or #D7BCC8 if want a tinted paper */

    z-index: 1;
    overflow: hidden;
    transition: 0.4s 0.2s;
  }

  .animated-mail .letter-border {
    height: 10px;
    width: 100%;
    background: repeating-linear-gradient(
      -45deg,
      /* #cb5a5e, 
      #cb5a5e 8px, */ #629677,
      #629677 8px,
      transparent 8px,
      transparent 18px
    );
  }

  .animated-mail .letter-title {
    margin-top: 10px;
    margin-left: 5px;
    height: 10px;
    width: 40%;
    /* background: #cb5a5e; */
    background: #629677;
  }

  .animated-mail .letter-context {
    margin-top: 10px;
    margin-left: 5px;
    height: 10px;
    width: 20%;
    /* background: #cb5a5e; */
    background: #629677;
  }

  .animated-mail .letter-stamp {
    margin-top: 30px;
    margin-left: 120px;
    border-radius: 100%;
    height: 30px;
    width: 30px;
    background: #629677;
    /* background: #cb5a5e; */
    opacity: 0.3;
  }

  .animated-mail .letter-body {
    margin-top: 20px;
    margin-left: 5px;
    width: 90%;
  }

  .animated-mail .body-line {
    height: 8px;
    width: 100%;
    background: #629677;
    margin-bottom: 8px;
    border-radius: 2px;
    opacity: 0.5;
  }

  .animated-mail .body-line:nth-child(2) {
    width: 80%;
  }

  .animated-mail .body-line:nth-child(3) {
    width: 60%;
  }

  .animated-mail .letter-footer {
    margin-top: 5px;
    height: 10px;
    width: 100%;
    background: repeating-linear-gradient(
      -45deg,
      #629677,
      #629677 8px,
      transparent 8px,
      transparent 18px
    );
    position: absolute;
    bottom: 0;
  }

  .shadow {
    position: absolute;
    top: 200px;
    left: 50%;
    width: 400px;
    height: 30px;
    border-radius: 100%;
    background: radial-gradient(
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0),
      rgba(0, 0, 0, 0)
    );
    transform: translateX(-50%);
    transition: 0.4s;
  }

  /* hover = little peek, same behavior you had */

  .letter-image:hover .animated-mail {
    transform: translateY(50px);
  }

  .letter-image:hover .animated-mail .top-fold {
    transition:
      transform 0.4s,
      z-index 0.2s;
    transform: rotateX(180deg);
    z-index: 0;
  }

  .letter-image:hover .animated-mail .letter {
    height: 180px;
  }

  .letter-image:hover .shadow {
    width: 250px;
  }

  /* click = fully open + pop out and stay open */

  .letter-image.is-open .animated-mail {
    transform: translateY(50px); /* Stay low so we can see the letter pop out */
  }

  .letter-image.is-open .animated-mail .top-fold {
    transform: rotateX(180deg);
    z-index: 0;
    transition:
      transform 0.4s,
      z-index 0.2s;
  }

  .letter-image.is-open .animated-mail .letter {
    /* height: 220px; */
    height: 180px; /* Start at peek height */
    animation: pop-out 1s forwards ease-in-out;
    animation-delay: 0.4s; /* Wait for top fold to open */
  }

  @keyframes pop-out {
    0% {
      transform: translateY(0);
      z-index: 1;
    }
    50% {
      transform: translateY(-120px); /* Jump up high */
      z-index: 1;
    }
    51% {
      z-index: 3; /* Switch to front */
    }
    100% {
      transform: translateY(-40px); /* Land in front */
      z-index: 3;
      height: 195px; /* Full height */
    }
  }

  .letter-image.is-open .shadow {
    width: 260px;
  }
</style>

<script>
  const envelope = document.querySelector(".letter-image");
  if (envelope) {
    envelope.addEventListener("click", (e) => {
      (e.currentTarget as Element).classList.toggle("is-open");
    });
  }
</script>
